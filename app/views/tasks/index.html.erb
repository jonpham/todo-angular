<h1>AngularTODO tasks</h1>

<div ng-app="app">
  <div ng-controller="taskCtrl">
    <input ng-model="newTask" ng-click="clearNewTask();">
    <button ng-click="addTask(newTask);">Add New Task</button>
    <div id="filter_list">
      <ul >
        <li ng-click="showAllTasks();">All</li>
        <li ng-click="showIncompleteTasks();">Active</li>
        <li ng-click="showCompletedTasks();">Completed</li>
      </ul>
    </div>
    <ul>
      <li ng-repeat="task in visibleTasks track by $index">
        <span ng-class="{'strike': task.completed}" ng-click="markDone(task)">
          {{ task.text }}
        </span> 
      </li>
    </ul>
    <div>
      <button ng-click="clearCompleted();" ng-if="tasks.length !== numIncomplete">Clear Completed Tasks</button>
    </div>
    <h4>{{ numIncomplete }} Items Left</h4>
  </div>
</div>

